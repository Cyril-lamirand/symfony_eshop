{% extends 'base.html.twig' %}

{% block title %}{{ product.ProductName }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { padding: 2px 6px; }
    </style>

    <div class="example-wrapper txt-color">
        <div class="text-center">
            <img src="../uploads/{{ product.ProductPicture }}" alt="Product Image of {{ product.ProductName }}">
        </div>
        <h1>{{ product.ProductName }}</h1>
        <p>{{ product.ProductPrice }} <span class="dollar">$</span></p>
        <p>{{ loc_stock }} : {{ product.ProductQuantity }}</p>
        <hr>
        <h2>Action(s)</h2>
        {{ form(form_cart_product) }}
    </div>
{% endblock %}
